{
  "name": "executive-order-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "scrape": "tsx src/lib/scraper/index.ts",
    "scrape:watch": "tsx watch src/lib/scraper/index.ts",
    "scrape:full": "npm run db:generate && npm run scrape && npm run db:push",
    "scheduler": "tsx src/lib/scheduler/index.ts",
    "scheduler:prod": "node dist/lib/scheduler/index.js",
    "scheduler:watch": "tsx watch src/lib/scheduler/index.ts",
    "analyze": "ANALYZE=true next build",
    "type-check": "tsc --noEmit",
    "lint:fix": "eslint --fix \"src/**/*.{ts,tsx}\"",
    "lint:strict": "eslint --max-warnings=0 src",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json,md}\"",
    "validate": "npm-run-all --parallel type-check lint:strict format:check test",
    "prepare": "husky install",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "clean": "rimraf .next out dist coverage",
    "build:scheduler": "tsc -p tsconfig.scheduler.json",
    "pm2:start": "pm2 start npm --name 'eo-scheduler' -- run scheduler:prod",
    "pm2:stop": "pm2 stop eo-scheduler",
    "pm2:logs": "pm2 logs eo-scheduler",
    "test-db": "tsx src/scripts/test-db.ts",
    "test-scraper": "tsx src/scripts/test-scraper.ts",
    "test-api": "tsx src/scripts/test-api.ts",
    "test-scheduler": "tsx src/scripts/test-api.ts -- --check-scheduler",
    "predev": "npm run clean",
    "prebuild": "npm run clean",
    "postbuild": "next-sitemap --config next-sitemap.config.js"
  },
  "dependencies": {
    "@aws-crypto/sha256-js": "^5.2.0",
    "@aws-sdk/client-cognito-identity": "^3.744.0",
    "@aws-sdk/credential-provider-env": "^3.744.0",
    "@aws-sdk/credential-providers": "^3.744.0",
    "@aws-sdk/protocol-http": "^3.370.0",
    "@aws-sdk/signature-v4": "^3.370.0",
    "@prisma/client": "^6.3.1",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tanstack/react-query": "^5.66.0",
    "@tanstack/react-query-devtools": "^5.66.0",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.1",
    "lucide-react": "^0.323.0",
    "next": "^14.2.23",
    "next-themes": "^0.2.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pino": "^9.6.0",
    "pino-pretty": "^10.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "^2.12.0",
    "sanitize-html": "^2.11.0",
    "tailwind-merge": "^2.6.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.23",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/node-cron": "^3.0.11",
    "@types/pino": "^7.0.4",
    "@types/pino-pretty": "^5.0.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/sanitize-html": "^2.9.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.17",
    "critters": "^0.0.20",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "next-sitemap": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "prisma": "^6.3.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}