{
  "extends": ["next/core-web-vitals"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "warn",
    "no-console": ["warn", { 
      "allow": ["warn", "error", "info"] 
    }]
  },
  "overrides": [{
    "files": ["src/scripts/**/*.ts"],
    "rules": {
      "no-console": "off"
    }
  }]
}