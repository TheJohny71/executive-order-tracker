datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ExecutiveOrder {
  id          String    @id @default(cuid())
  orderNumber String?   @unique // Some might be memoranda without numbers
  type        String    // "Executive Order" or "Memorandum"
  title       String
  date        DateTime
  url         String    @unique // Added unique constraint
  summary     String?   @db.Text
  notes       String?   @db.Text
  isNew       Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  categories  Category[]
  agencies    Agency[]

  @@index([date])
  @@index([type])
}

model Category {
  id          String           @id @default(cuid())
  name        String           @unique
  orders      ExecutiveOrder[]
}

model Agency {
  id          String           @id @default(cuid())
  name        String           @unique
  orders      ExecutiveOrder[]
}