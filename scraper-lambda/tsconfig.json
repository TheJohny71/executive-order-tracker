{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "rootDir": ".",
      "sourceMap": true,
      "declaration": true,
      "skipLibCheck": true,
      "types": ["node", "aws-lambda"],
      "typeRoots": ["./node_modules/@types", "./"]
    },
    "include": [
      "*.ts",
      "*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}